@model ProjekatPSA.Models.Proizvod
@{
    ViewBag.Title = "Services";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<div class="main-banner wow fadeIn" id="top" data-wow-duration="1s" data-wow-delay="0.5s">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-6 align-self-center">
                        <div class="left-content show-up header-text wow fadeInLeft" data-wow-duration="1s" data-wow-delay="1s">
                            <div class="row">
                                <div class="col-lg-12">
                                    
                                       <h6>Naručivanje proizvoda</h6>
                                    @using (Html.BeginForm())
                                    {
                                        <label>Naziv proizvoda </label>
                                        @Html.TextBoxFor(x => x.Naziv) <br /> <br />

                                        <label>Fotografija </label>
                                        @Html.TextBoxFor(x => x.Fotografija) <br /> <br />

                                        <label>Cena proizvoda </label>
                                        @Html.TextBoxFor(x => x.Cena) <br /> <br />

                                        <label>Popust </label>
                                        @Html.TextBoxFor(x => x.Popust) <br /> <br />

                                        <label>Proizvodjac</label>
                                        @Html.DropDownListFor(x => x.Proizvodjac, new[] {
                                        new SelectListItem() {
                                        Text = "--",
                                        Value = "--" },
                                        new SelectListItem() {
                                        Text = "Nike",
                                        Value = "Nike" },
                                        new SelectListItem() {
                                        Text = "Adidas",
                                        Value = "Adidas" },
                                        new SelectListItem() {
                                        Text = "New Balance",
                                        Value = "New Balance" },
                                        new SelectListItem() {
                                        Text = "PUMA",
                                        Value = "PUMA" }
                                        }) <br /> <br />                             
                                        }
                                </div>
                                <div class="col-lg-12">
                                    <div class="border-first-button scroll-to-section">
                                        <a href="#contact">Naruči</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="right-image wow fadeInRight" data-wow-duration="1s" data-wow-delay="0.5s">
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




