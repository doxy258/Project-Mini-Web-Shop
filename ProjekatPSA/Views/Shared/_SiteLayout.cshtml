<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/fontawesome.css">
    <link rel="stylesheet" href="~/Content/templatemo-digimedia-v3.css">
    <link rel="stylesheet" href="~/Content/animated.css">
    <link rel="stylesheet" href="~/Content/owl.css">
    

</head>
<body>
   

        <!-- ***** Preloader Start ***** -->
        <div id="js-preloader" class="js-preloader">
            <div class="preloader-inner">
                <span class="dot"></span>
                <div class="dots">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </div>
        </div>
        <!-- ***** Preloader End ***** -->
        <!-- Pre-header Starts -->
        <div class="pre-header">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-sm-8 col-7">
                        <ul class="info">
                            <li><a href="#"><i class="fa fa-envelope"></i>shoponline@info.com</a></li>
                            <li><a href="#"><i class="fa fa-phone"></i>+381 21 659-8024</a></li>
                        </ul>
                    </div>
                    <div class="col-lg-4 col-sm-4 col-5">
                        <ul class="social-media">
                            <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="#"><i class="fa fa-instagram"></i></a></li>
                            <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                            
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- Pre-header End -->
        <!-- ***** Header Area Start ***** -->
        <header class="header-area header-sticky wow slideInDown" data-wow-duration="0.75s" data-wow-delay="0s">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <nav class="main-nav">
                            <!-- ***** Logo Start ***** -->
                            <a href="index.html" class="logo">
                                <img src="~/Images/logo.jpg" style="height:115px; width:115px;"alt="">
                            </a>
                            <!-- ***** Logo End ***** -->
                            <!-- ***** Menu Start ***** -->
                            <ul class="nav">
                                <li class="scroll-to-section">@Html.ActionLink("Početna", "Index", "Site")</li>
                                <li class="scroll-to-section">@Html.ActionLink("O nama", "About", "Site")</li>
                                <li class="scroll-to-section">@Html.ActionLink("Proizvodi", "Services", "Site")</li>
                                <li class="scroll-to-section">@Html.ActionLink("Kontakt", "Contact", "Site")</li>
                                <li class="scroll-to-section">
                                    <div class="border-first-button">
                                        <a href="#contact">
                                            <i class="fa fa-shopping-cart"></i> Korpa
                                        </a>
                                    </div>
                                </li>


                            </ul>
                            <a class='menu-trigger'>
                                <span>Menu</span>
                            </a>
                            <!-- ***** Menu End ***** -->
                        </nav>
                    </div>
                </div>
            </div>
        </header>
        <!-- ***** Header Area End ***** -->

        @RenderBody()
        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <p>
                            Copyright © 2023 ShopOnline Co., Ltd. All Rights Reserved.
                            <br>Design: ShopOnline
                        </p>
                    </div>
                </div>
            </div>
        </footer>

    

    


    <!-- Scripts -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/owl-carousel.js"></script>
    <script src="~/Scripts/animation.js"></script>
    <script src="~/Scripts/imagesloaded.js"></script>
    <script src="~/Scripts/custom.js"></script>

</body>
</html>
